<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      spacing="10" alignment="CENTER"
      style="-fx-padding: 20; -fx-background-color: #f4f4f4;">

    <!-- Título principal -->
    <Label text="Sistema de Inspecciones Sismológicas"
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <!-- Botón para cerrar orden -->
    <Button text="Cerrar Orden de Inspección"
            fx:id="btnCerrarOrden"
            style="-fx-font-size: 14px; -fx-pref-width: 250px; -fx-pref-height: 40px;"
            onAction="#abrirCierreOrden"/>

    <!-- Espacio adicional si necesitas más elementos -->
    <Region prefHeight="20"/>

</VBox>