<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.CheckBox?>

<VBox alignment="TOP_CENTER" prefHeight="700.0" prefWidth="900.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dsi.ppai.frontend.MainScreenController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="PPAI - Cerrar Orden de Inspección" />

    <VBox alignment="CENTER_LEFT" spacing="10.0">
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label text="Responsable de Inspección:" />
            <ComboBox fx:id="cmbResponsableInspeccion" prefWidth="250.0" promptText="Seleccione un responsable" />
        </HBox>
        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Órdenes de Inspección Completamente Realizadas" />
    </VBox>


    <TableView fx:id="tblOrdenes" prefHeight="250.0" prefWidth="860.0">
        <columns>
            <TableColumn fx:id="colNumeroOrden" prefWidth="90.0" text="Nro. Orden" />
            <TableColumn fx:id="colFechaInicio" prefWidth="150.0" text="Fecha Inicio" />
            <TableColumn fx:id="colEstado" prefWidth="150.0" text="Estado" />
            <TableColumn fx:id="colResponsableInspeccion" prefWidth="200.0" text="Responsable Inspección" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Órdenes cargadas para Juan Perez" />

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" percentWidth="30.0" />
            <javafx.scene.layout.ColumnConstraints hgrow="SOMETIMES" percentWidth="70.0" />
        </columnConstraints>
        <rowConstraints>
            <javafx.scene.layout.RowConstraints vgrow="SOMETIMES" />
            <javafx.scene.layout.RowConstraints vgrow="SOMETIMES" />
        </rowConstraints>

        <Label text="Observación de Cierre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextArea fx:id="txtObservacionCierre" prefHeight="80.0" prefWidth="400.0" promptText="Ingrese observación aquí..." GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Motivos de Fuera de Servicio:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <VBox fx:id="vboxMotivosFueraServicio" spacing="5.0" GridPane.rowIndex="1" GridPane.columnIndex="1">
        </VBox>
    </GridPane>

    <Button fx:id="btnCerrarOrden" onAction="#cerrarOrdenSeleccionada" text="Cerrar Orden Seleccionada" />

</VBox>