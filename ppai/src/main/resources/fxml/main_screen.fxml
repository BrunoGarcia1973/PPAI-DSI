<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="dsi.ppai.frontend.MainScreenController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Órdenes de Inspección Completamente Realizadas"/>

    <Button text="Buscar Órdenes" onAction="#handleBuscarOrdenes"/>

    <TableView fx:id="ordenesTableView" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="numeroOrdenCol" text="Nro. Orden" prefWidth="100"/>
            <TableColumn fx:id="fechaInicioCol" text="Fecha Inicio" prefWidth="150"/>
            <TableColumn fx:id="estadoCol" text="Estado" prefWidth="120"/>
        </columns>
    </TableView>

    <Label fx:id="statusLabel" text=""/>
</VBox>